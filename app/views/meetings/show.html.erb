<% if current_user && current_user.is_admin %>
  <div class="pull-right">
    <%= link_to("edit", edit_meeting_path(@meeting), :class => "btn btn-default")%>
    <%= link_to("delete", meeting_path(@meeting), method: :delete,
                :data => { :confirm => 'Are you sure?' }, :class => "btn btn-default") %>
  </div>
<% end %>

<div class="container-fluid">
  <div class="col-md-12">
    <section id="job-info">

      <!-- title -->
      <div class="job-title">
        <%= @meeting.name %>
      </div>

      <!-- location -->
      <p class="details">
        <p class="address">
          <i class="fa fa-location-arrow fa-fx" aria-hidden="true"></i>
          <%= @meeting.address %>
        </p>
      </p>

      <!-- description -->
      <p class="description">
        <%= @meeting.intro %>
      </p>


      <!-- show google map -->
      <div id="map"></div>

      <script src="//maps.google.com/maps/api/js?key=AIzaSyBllRAX1LEu6GwQCp-m8hOYL6mIwT7hwEI"></script>
      <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>

      <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
      </script>
  </div>
</div>
