<header class="wrapper" id="top">
  <div class="container">

    <!--Logo-->
    <a class="navbar-brand" href="/">
      <img src="http://image.ibb.co/d8Cti6/logo_crop.png" align="middle">
    </a>

    <!--List-->
    <nav>
      <ul>
        <li><a href="/">home</a></li>
        <li><a href="/meetings">events</a></li>
        <li><a href="/news">news</a></li>
        <li><a href="/aboutus">about us</a></li>
